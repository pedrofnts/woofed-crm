<div data-controller="element-expanded" aria-expanded="false" class="group ease-in duration-300 h-screen border-l-2 border-light-palette-p3 fixed top-0 right-0 p-4 space-y-4 w-[72px] aria-expanded:w-60" id="element-expand" data-element-expanded-target='sidebar'>
  <div class="flex items-center flex-wrap justify-between">
    <%= link_to(root_path()) do %>
      <%= image_tag "logo.svg", class: 'w-36 hidden group-aria-[expanded=true]:block' %>
    <% end %>
    <%= link_to(root_path()) do %>
      <div class='block w-[40px] border-2 border-light-palette-p3 p-1.5 rounded-md hover:bg-brand-palette-08'>
        <%= image_tag "logo-patinha.svg"%>
      </div>
    <% end %>
  </div>
  <div class="block h-[2px] w-full bg-light-palette-p3"></div>
  <ul class="flex flex-col space-y-3 border-b-md">
    <li class="<%= ' bg-brand-palette-08  !border-brand-palette-07 rounded-md !text-brand-palette-03' if request.path.include?('pipelines') or request.path.include?('deal') %> text-dark-gray-palette-p3 border-2 border-transparent hover:bg-brand-palette-08 hover:rounded-md w-full h-[40px]">
      <%= link_to(account_pipelines_path(Current.account), class: 'p-2.5 flex space-x-3 items-center') do %>
        <%= embedded_svg("deals-icon.svg", class: "w-4 #{'!fill-brand-palette-03 ' if request.path.include?('pipelines') or request.path.include?('deal')} mx-auto fill-dark-gray-palette-p3") %>
        <span class="hidden ml-2 typography-text-m-lh150">
          <%= t('activerecord.models.deal.one') %>
        </span>
      <% end %>
    </li>
    <li class="<%= ' bg-brand-palette-08 !border-brand-palette-07 rounded-md !text-brand-palette-03' if request.path.include?('contact') %> text-dark-gray-palette-p3 border-2 border-transparent hover:bg-brand-palette-08 hover:rounded-md w-full h-[40px]">
      <%= link_to(account_contacts_path(Current.account), class: 'p-2.5 flex space-x-3 items-center') do %>
        <%= embedded_svg("contacts-icon.svg", class: "w-4 #{'!fill-brand-palette-03 ' if request.path.include?('contact') or request.path.include?('contact')} mx-auto fill-dark-gray-palette-p3") %>
        <span class="hidden ml-2 typography-text-m-lh150">
          <%= t('activerecord.models.contact.one') %>
        </span>
      <% end %>
    </li>
    <li class="<%= ' bg-brand-palette-08 !border-brand-palette-07 rounded-md !text-brand-palette-03' if request.path.include?('product') %> text-dark-gray-palette-p3 border-2 border-transparent hover:bg-brand-palette-08 hover:rounded-md w-full h-[40px]">
      <%= link_to(account_products_path(Current.account), class: 'p-2.5 flex space-x-3 items-center') do %>
        <i data-lucide="box" class="w-[18px] h-[18px] <%= '!stroke-brand-palette-03 ' if request.path.include?('product') %> mx-auto stroke-dark-gray-palette-p3"></i>
        <span class="hidden ml-2 typography-text-m-lh150">
          <%= t('activerecord.models.product.one') %>
        </span>
      <% end %>
    </li>
    <div class="h-[2px] w-full bg-light-palette-p3"></div>
    <li class="<%= 'bg-brand-palette-08 !border-brand-palette-07 rounded-md !text-brand-palette-03' if request.path.include?('settings') %> text-dark-gray-palette-p3 border-2 border-transparent icons-button-sidebar mt-auto absolute bottom-4 right-3 left-3 hover:bg-brand-palette-08 hover:rounded-md">
      <%= link_to(account_settings_path(Current.account), class: 'icons-link-sidebar flex space-x-3 p-3 items-center') do %>
        <%= embedded_svg("company-icon.svg", class: "w-4 lg:m-0 flex #{'!fill-brand-palette-03 ' if request.path.include?('settings')} mx-auto fill-dark-gray-palette-p3") %>
        <span class="hidden ml-2 typography-text-m-lh150">
          <%= t('views.layouts.shared.sidebar.company') %>
        </span>
      <% end %>
    </li>
  </ul>
</div>
